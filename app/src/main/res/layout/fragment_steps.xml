<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/steps_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mediumPadding"
        app:cardBackgroundColor="@color/colorYellowBackground">

        <TextView
            android:id="@+id/steps_shortDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/smallPadding"
            android:paddingTop="@dimen/smallPadding"
            android:textColor="@color/DarkBluishGreenText"
            android:textSize="@dimen/mediumText"
            tools:text="Step1" />
    </android.support.v7.widget.CardView>
</LinearLayout>